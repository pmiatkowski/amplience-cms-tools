{
  "name": "amplience-cms-tools",
  "version": "1.0.0",
  "description": "CLI tool for automating bulk operations within Amplience CMS",
  "author": "Pawel Miatkowski",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "build": "tsc --noEmit && echo Success: build completed",
    "update-delivery-keys": "tsx src/index.ts"
  },
  "keywords": [
    "amplience",
    "cms",
    "cli",
    "content-management",
    "automation"
  ],
  "dependencies": {
    "@amplience/dc-cli": "^0.26.1",
    "@types/cli-progress": "^3.11.6",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.5",
    "inquirer": "^10.2.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sort-exports": "^0.9.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.42.0",
    "vitest": "^2.1.2"
  }
}
