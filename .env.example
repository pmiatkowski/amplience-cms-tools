# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Available hubs (comma-separated list of environment names)
AMP_DEFAULT_SCHEMA_ID=https://your-schema.com

# Default schema id in prompts
AMP_HUBS=DEV,PLAYGROUND,PROD

# Development Environment
AMP_DEV_CLIENT_ID=your_dev_client_id_here
AMP_DEV_CLIENT_SECRET=your_dev_client_secret_here
AMP_DEV_HUB_ID=your_dev_hub_id_here
AMP_DEV_HUB_NAME=readable_hub_name

# Playground Environment
AMP_PLAYGROUND_CLIENT_ID=your_playground_client_id_here
AMP_PLAYGROUND_CLIENT_SECRET=your_playground_client_secret_here
AMP_PLAYGROUND_HUB_ID=your_playground_hub_id_here
AMP_PLAYGROUND_HUB_NAME=readable_hub_name

# Production Environment
AMP_PROD_CLIENT_ID=your_prod_client_id_here
AMP_PROD_CLIENT_SECRET=your_prod_client_secret_here
AMP_PROD_HUB_ID=your_prod_hub_id_here
AMP_PROD_HUB_NAME=readable_hub_name

# API Configuration
AMP_API_BASE_URL=https://api.amplience.net
AMP_RATE_LIMIT_DELAY=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
