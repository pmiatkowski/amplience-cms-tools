{
  "name": "amplience-cms-tools",
  "version": "1.0.0",
  "description": "CLI tool for automating bulk operations within Amplience CMS",
  "author": "Pawel Miatkowski",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "lint": "eslint src/ scripts/ --ext .ts,.js,.json",
    "lint:fix": "eslint src/ scripts/ --ext .ts,.js,.json --fix",
    "format": "prettier --write \"{src,scripts}/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"{src,scripts}/**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:ui": "vitest --coverage --ui",
    "coverage:report": "tsx scripts/process-coverage.ts",
    "coverage:open": "node -e \"require('child_process').exec(process.platform === 'win32' ? 'start coverage/index.html' : process.platform === 'darwin' ? 'open coverage/index.html' : 'xdg-open coverage/index.html')\"",
    "type-check": "tsc --noEmit",
    "build": "tsc --noEmit && echo Success: build completed",
    "prepare": "husky"
  },
  "keywords": [
    "amplience",
    "cms",
    "cli",
    "content-management",
    "automation"
  ],
  "dependencies": {
    "@amplience/dc-cli": "^0.26.1",
    "@types/cli-progress": "^3.11.6",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.5",
    "inquirer": "^10.2.2",
    "winston": "^3.14.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.7.5",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sort-exports": "^0.9.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3",
    "semantic-release": "^25.0.2",
    "semver": "^7.7.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.42.0",
    "vitest": "^2.1.2"
  }
}
